<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            >

            <TextView
                android:id="@+id/tv_TituloPantalla3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="Calculo de notas"
                android:textColor="#039BE5"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_NombrePantalla3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:text="sds"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/tv_ApellidoPantalla3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:text="sds"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/tv_RutPantalla3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:text="sds"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/tv_CarreraPantalla3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:text="sds"
                android:textSize="25dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <TextView
                android:id="@+id/tv_tituloA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asignatura: "
                android:minHeight="50dp"
                android:textSize="25dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_promedioA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promedio: "
                android:minHeight="50dp"
                android:textSize="20dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_tituloA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asignatura: "
                android:minHeight="50dp"
                android:textSize="25dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_promedioA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promedio: "
                android:minHeight="50dp"
                android:textSize="20dp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_tituloPromedioTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promedio total"
            android:gravity="center_horizontal"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tv_promedioTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:gravity="center_horizontal"
            android:textSize="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>