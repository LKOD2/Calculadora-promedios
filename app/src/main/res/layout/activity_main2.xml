<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            >

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="Calculo de notas"
                android:textColor="#039BE5"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNombrePantalla2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:text="sds"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/textViewApellidoPantalla2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:text="sds"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/textViewRutPantalla2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:text="sds"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/textViewCarreraPantalla2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:text="sds"
                android:textSize="25dp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <EditText
                android:id="@+id/editTextAsignatura1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Asignatura 1"
                android:inputType="textPersonName"
                android:minHeight="50dp" />

            <EditText
                android:id="@+id/editTextAsignatura1Nota1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 1"
                android:inputType="numberDecimal"
                android:minHeight="50dp"
                android:maxLength="3"/>

            <EditText
                android:id="@+id/editTextAsignatura1Nota2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 2"
                android:inputType="numberDecimal"
                android:minHeight="50dp"
                android:maxLength="3"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <EditText
                android:id="@+id/editTextAsignatura2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Asignatura 2"
                android:inputType="textPersonName"
                android:minHeight="50dp" />

            <EditText
                android:id="@+id/editTextAsignatura2Nota1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 1"
                android:inputType="numberDecimal"
                android:minHeight="50dp"
                android:maxLength="3"/>

            <EditText
                android:id="@+id/editTextAsignatura2Nota2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nota 2"
                android:inputType="numberDecimal"
                android:minHeight="50dp"
                android:maxLength="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonVolver"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="#D81B60"
                android:text="Volver"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/buttonSiguiente"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="#43A047"
                android:text="Siguiente"
                android:layout_weight="1"/>
        </LinearLayout>






    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>